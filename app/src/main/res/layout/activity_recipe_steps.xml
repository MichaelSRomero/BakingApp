<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    tools:context=".ui.recipesteps.RecipeStepsActivity">

    <LinearLayout
        android:id="@+id/recipe_steps_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_16dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/exo_player_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/exo_player_container_height">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/steps_description_container"
            android:layout_marginTop="@dimen/margin_padding_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <Button
            android:id="@+id/next_button"
            android:layout_width="@dimen/next_button_width"
            android:layout_height="@dimen/next_button_height"
            android:layout_marginTop="@dimen/margin_padding_16dp"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="nextStep"
            android:text="@string/next_button_label"/>

    </LinearLayout>
</ScrollView>